# ===========================================
# Auto-Match Platform Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Application
APP_NAME=Auto-Match Platform
DEBUG=false
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=automatch
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/automatch

# Redis
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Telegram Bot
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here
# Webhook URL for production (leave empty for polling mode)
TELEGRAM_WEBHOOK_URL=
# Secret for webhook verification
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-here

# JWT Authentication
# IMPORTANT: Change this in production!
JWT_SECRET_KEY=change-me-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# MinIO / S3 Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=automatch-media
S3_REGION=us-east-1

# Media Settings
MAX_IMAGE_SIZE_MB=10
MAX_IMAGES_PER_LISTING=15
MIN_IMAGES_PER_LISTING=3
THUMBNAIL_SIZES=150x150,400x400

# Matching Settings
MATCH_THRESHOLD_PERCENT=70
MATCH_BATCH_SIZE=1000
MATCH_PROCESSING_TIMEOUT_SECONDS=30

# Listing/Requirement Expiry
LISTING_EXPIRY_DAYS=45
LISTING_RENEWAL_REMINDER_DAYS=30
REQUIREMENT_EXPIRY_DAYS=90
REQUIREMENT_RENEWAL_REMINDER_DAYS=60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
